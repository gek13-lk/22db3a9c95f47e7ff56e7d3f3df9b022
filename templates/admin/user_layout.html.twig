{% extends '@EasyAdmin/layout.html.twig' %}

{% block head %}
    {{ parent() }}
    {% include 'inc/head.html.twig' %}
{% endblock %}

{% block body %}
    <body>
    <div id="loading-wrapper">
        <div class="spinner-border" role="status">
            <span class="sr-only">Загрузка...</span>
        </div>
    </div>
    {% block header %}
        {% include 'inc/header.html.twig' with getGlobalVariables() %}
        {% include 'inc/stylesheet.html.twig' %}
    {% endblock %}
    <div class="container-fluid">
        {% include 'inc/navbar.html.twig' %}

        {% block content %}
        <div class="main-container">
            <div class="page-header">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Администрирование / Пользователи</li>
                </ol>
                <div class="site-award">
                    <img src="img/award.png">
                </div>
            </div>
            <div class="content-wrapper" style="max-width: 100% !important;">
                <div class="row gutters">
                    {{ parent() }}
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    {% block footer %}
        <footer class="main-footer">© Поставил цель - добегайся 2024</footer>
        {% include 'inc/footer.html.twig' %}
        {% include 'inc/stylesheet.html.twig' %}
    {% endblock %}
    </body>
{% endblock %}
