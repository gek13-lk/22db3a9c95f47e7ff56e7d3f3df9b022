{% extends 'base.html.twig' %}

{% block title %}Расписание{% endblock %}

{% block page_content %}
    <style>
        .content {
            display: flex;
            flex-direction: column;
        }

        .content-body {
            position: relative;
            margin-top: 1px;
            flex: 1;
        }

        .table-responsive {
            min-height: 480px;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        thead > tr:first-child > th:first-child,
        tbody > tr > td:first-child {
            position: sticky;
            left: 0;
            z-index: 1010;
        }

        thead {
            position: sticky;
            top: 0;
            z-index: 1020;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.04);
        }

        .cal-toprow {
            width: 120px;
            min-width: 120px;
            color: #3e5569;
            background-color: #f7f9fb !important;
            border: 1px solid #ebebeb !important;
        }
    </style>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="cal-thead">
            <tr>
                <th class="cal-view" rowspan="2">Врач</th>
                <th class="cal-view" rowspan="2">Модальность</th>
                <th class="cal-view" rowspan="2">Дополнительные модальности</th>
                <th class="cal-view" rowspan="2">Ставка</th>
                <th class="cal-view" rowspan="2">Таб. №</th>
                <th class="cal-view-month" colspan="{{ calendars|length + 2 }}">Числа месяца</th>
                <th class="cal-view" rowspan="2">Норма часов по графику</th>
                <th class="cal-view" rowspan="2">Норма часов за полный месяц</th>
            </tr>
            <tr>
                {% for calendar in calendars %}
                    {% if loop.index0 == 15 %}
                        <th class="cal-view-part-start">Итого за 1 пол. месяца</th>
                    {% endif %}

                    <th class="cal-month">{{ calendar.date|date('d.m.Y') }}</th>
                    {% if loop.last %}
                        <th class="cal-view-part-start">Итого за 2 пол. месяца</th>
                    {% endif %}
                {% endfor %}
            </tr>
            </thead>
            <tbody class="cal-tbody">
            {% for doctor in doctors %}
                <tr>
                    <td class="cal-userinfo">{{ doctor.fio ?? 'Врач'~doctor.id }}</td>
                    <td class="cal-userinfo">{{ doctor.competency|join(', ') }}</td>
                    <td class="cal-userinfo">{{ doctor.addonCompetencies|join(', ') }}</td>
                    <td class="cal-userinfo">{{ doctor.stavka }}</td>
                    <td class="cal-userinfo"></td>
                    {% set partStart = 0 %}
                    {% set partEnd = 0 %}
                    {% for calendar in calendars %}
                        {% set schedule = null %}
                        {% if schedule and loop.index0 < 15 %}
                            {% set partStart = partStart + schedule.work_hours %}
                        {% endif %}

                        {% if schedule and loop.index0 >= 15 %}
                            {% set partEnd = partEnd + schedule.work_hours %}
                        {% endif %}

                        {% if loop.index0 == 15 %}
                            <th class="cal-part-start">{{ partStart }}</th>
                        {% endif %}

                        <th class="cal-schedule"></th>
                        {% if loop.last %}
                            <th class="cal-part-end">{{ partEnd }}</th>
                        {% endif %}
                    {% endfor %}
                    <td class="cal-userinfo">{{ partStart + partEnd }}</td>
                    <td class="cal-userinfo"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
