{% extends 'bundles/EasyAdminBundle/page/content.html.twig' %}

{% block main %}
    <style>
        .content {
            display: flex;
            flex-direction: column;
        }

        .content-body {
            position: relative;
            margin-top: 1px;
            flex: 1;
        }

        .table-responsive {
            min-height: 480px;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        thead > tr:first-child > th:first-child,
        tbody > tr > td:first-child {
            position: sticky;
            left: 0;
            z-index: 1010;
        }

        thead {
            position: sticky;
            top: 0;
            z-index: 1020;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.04);
        }

        .cal-toprow {
            width: 120px;
            min-width: 120px;
            color: #3e5569;
            background-color: #f7f9fb !important;
            border: 1px solid #ebebeb !important;
        }

        .export-button {
            min-width: 100%;
        }

        .export-button a {
            float: right;
            margin: 0 0 0 10px !important;
        }
    </style>
    <div class="col-12 table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="cal-thead">
            <tr>
                <th class="cal-view" rowspan="2">Идентификатор</th>
                <th class="cal-view" rowspan="2">Дата расписания</th>
                <th class="cal-view" rowspan="2">Дата создания расписания</th>
                <th class="cal-view" rowspan="2">Балл</th>
                <th class="cal-view" rowspan="2">Согласовано</th>
                <th class="cal-view" rowspan="2"></th>
            </tr>
            </thead>
            <tbody class="cal-tbody">
            {% for schedule in schedules %}
                <tr>
                    <td class="cal-userinfo">{{ schedule.id }}</td>
                    <td class="cal-userinfo">{{ schedule.date|date('d.m.Y') }}</td>
                    <td class="cal-userinfo">{{ schedule.date|date('d.m.Y') }}</td>
                    <td class="cal-userinfo">{{ schedule.fitness }}</td>
                    <td class="cal-userinfo">{{ schedule.isApproved ? 'Да' : 'Нет' }}</td>
                    <td class="cal-userinfo">
                        <a href="{{ path('app_schedule_temp', {'tempSchedule': schedule.id}) }}" type="button" class="btn badge-secondary" id="cancelButton" data-dismiss="modal" style="width: 100%">Расписание</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
