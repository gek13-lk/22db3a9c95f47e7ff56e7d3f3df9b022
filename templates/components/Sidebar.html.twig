<aside class="d-flex flex-column flex-shrink-0 p-3 bg-body-tertiary border-end me-3 shadow" style="width: 280px;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <span class="fs-4">Sidebar</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        {% for navItem in this.navItems %}
            <li class="nav-item">
                <a href="{{ path(navItem.routeName, navItem.routeParams) }}"
                   class="nav-link {% if navItem.active %}active{% else %}link-body-emphasis{% endif %}"
                   {% if navItem.active %}aria-current="page"{% endif %}>{{ navItem.icon|raw }} {{ navItem.title }}</a>
            </li>
        {% endfor %}
    </ul>
    <hr>
    <div class="dropdown">
        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
           data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong>{{ app.user.username }}</strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="{{ path('app_profile') }}">Профиль</a></li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li><a class="dropdown-item" href={{ path('app_logout') }}>Выйти</a></li>
        </ul>
    </div>
</aside>